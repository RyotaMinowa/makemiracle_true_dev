.share {
width:100%;
text-align:center;
height:auto;
padding:15px;
}

.social-share-buttons {
width:100%;
padding:0;
}

.social-share-button {
height:72px;
width:193px;
border:none;
margin:15px 0;
padding:0;
}

.social-share-buttons-row {
width:100%;
text-align:center;
margin:0;
}

.social-share-facebook {
background-image:url(../img/social-sprt.png);
background-position:0 144px;
}

.social-share-twitter {
background-image:url(../img/social-sprt.png);
background-position:0 72px;
margin-left:15px;
margin-right:15px;
}

.social-share-line {
background-image:url(../img/social-sprt.png);
background-position:0 216px;
}

.fixed {
position:fixed;
z-index:10000;
top:0;
background-color:#FFF;
}

h1.articletitle {
font-size:24px;
line-height:34px;
font-weight:900;
}

.article-meta {
text-align:right;
margin-top:24px;
}

.category-span {
font-size:24px;
color:#5aa6bf;
}

.date-span {
font-size:24px;
color:#888;
}

.article-meta i {
color:#888;
margin-right:5px;
font-size:22px;
}

.article-head-social-row {
margin:24px 0;
}

.article-content {
font-size:24px;
line-height:25px;
color:#222;
}